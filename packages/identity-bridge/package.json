{
  "name": "@infinityvault/identity-bridge",
  "version": "1.0.0",
  "description": "Unified identity bridge service for cross-system authentication",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest",
    "test:watch": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest --watch",
    "test:coverage": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest --coverage",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@infinityvault/website-middleware": "file:../website-middleware",
    "zod": "^3.24.2",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.0",
    "drizzle-orm": "^0.39.1",
    "@neondatabase/serverless": "^0.9.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/jest": "^29.5.14",
    "typescript": "^5.6.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
